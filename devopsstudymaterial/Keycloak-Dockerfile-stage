FROM quay.io/keycloak/keycloak:21.1.1
USER root
ENV JAVA_OPTS "-server -Xms1024m -Xmx1500m -XX:MetaspaceSize=256M -XX:MaxMetaspaceSize=768m -Djava.net.preferIPv4Stack=true -Djboss.modules.system.pkgs=org.jboss.byteman -Djava.awt.headless=true"
#RUN keytool -genkeypair -storepass password -storetype PKCS12 -keyalg RSA -keysize 2048 -dname "CN=server" -alias server -ext "SAN:c=DNS:localhost,IP:127.0.0.1" -keystore /opt/keycloak/conf/server.keystore
ADD --chown=keycloak:keycloak keycloak-metrics-spi-3.0.1-SNAPSHOT.jar /opt/keycloak/providers/keycloak-metrics-spi-3.0.1-SNAPSHOT.jar
ADD --chown=keycloak:keycloak user-store-0.0.1-SNAPSHOT.jar-stage /opt/keycloak/providers/user-store-0.0.1-SNAPSHOT.jar
#ADD recaptcha-login.jar-stage /opt/keycloak/providers/recaptcha-login.jar
#ADD recaptcha-forget-password.jar-stage/opt/keycloak/providers/recaptcha-forget-password.jar
RUN mkdir -p /opt/keycloak/tools/cli/jgroups/discovery
ADD --chown=keycloak:keycloak JDBC_PING.cli /opt/keycloak/tools/cli/jgroups/discovery/
RUN mkdir -p /opt/keycloak/themes/sws
ADD .  /opt/keycloak/themes/sws/
RUN /opt/keycloak/bin/kc.sh build
RUN mkdir -p /opt/keycloak/certs
COPY odisha-cert /opt/keycloak/certs/
RUN keytool -import -alias ssoinvestodisha.odisha.gov.in -keystore /opt/keycloak/conf/truststore.jks -file /opt/keycloak/certs/odisha-cert -noprompt -storepass "1234567890"
ENTRYPOINT ["/opt/keycloak/bin/kc.sh", "start-dev"]
